@model IEnumerable<Product>

@{
    ViewData["Title"] = "Shop our cheeses";
}

@if (Model.Count() == 0)
{
    <h1>Sorry, no products found for this catefory</h1>
    return;
}
<h1>@ViewData["Category"]</h1>

<h1> All of these are really good...</h1>


<section class="row card-group">
<ul>
    @*@<li>@ViewData["Category"] Cheese 1</li>
    <li>@ViewData["Category"] Cheese 2</li>
    <li>@ViewData["Category"] Cheese 3</li>*@

    @foreach(var product in Model)
    {
        <article class="col-lg-4 mb-3">
        <div class="card mb-4">
            <div class="card-body">
        <h4>@product.Name</h4>
        <p>@product.Description</p>
        <p>@String.Format("{0:c}",product.Price)</p>
        <p>>@product.Size</p>
        </div>
        </div>
        </article>
    }
</ul>
</section>
